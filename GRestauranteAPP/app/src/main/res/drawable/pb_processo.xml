<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

        <item>
            <shape>
                <solid android:color="#E8E8E8"/>
                <corners
                    android:radius="10dp"/>
            </shape>
        </item>

        <item>
            <clip>
                <shape>
                    <gradient android:angle="45"
