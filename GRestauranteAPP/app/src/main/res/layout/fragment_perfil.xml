<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/fundo"
    tools:context=".vistas.PerfilFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/header_perfil"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="#ff9b71"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/im_perfil"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="30dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/perfil"/>

                <TextView
                    android:id="@+id/nom_completo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:includeFontPadding="false"
                    android:layout_below="@id/im_perfil"
                    android:text="Rui Jorge"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/nom_completo"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:includeFontPadding="false"
                    android:text="rui_jorge"

                    android:textSize="14sp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/cards"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_below="@id/header_perfil"
                android:layout_marginTop="-100dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="#EE6C4D"
                    app:cardElevation="10dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="20dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_pedidos"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="20dp"/>
                        <TextView
                            android:id="@+id/lb_perfil"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$123"
                            android:textSize="20sp"
                            android:layout_centerInParent="true">

                        </TextView>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="#EE6C4D"
                    app:cardElevation="10dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="20dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_pedidos"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="20dp"/>
                        <TextView
                            android:id="@+id/ff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$123"
                            android:textSize="20sp"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="10dp">

                        </TextView>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="#EE6C4D"
                    app:cardElevation="10dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="20dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_pedidos"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="20dp"/>
                        <TextView
                            android:id="@+id/ff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$123"
                            android:textSize="20sp"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="10dp">

                        </TextView>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/row_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_below="@id/cards"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginRight="10dp">
                    <TextView
                        android:id="@+id/lb_nome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="NOME"
                        android:textSize="10dp"
                        android:layout_marginLeft="30dp"/>

                    <EditText
                        android:id="@+id/edt_nome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nome"
                        android:drawableLeft="@drawable/ic_pedidos"
                        android:drawablePadding="10dp"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:id="@+id/lb_apelido"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="APELIDO"
                        android:textSize="10dp"
                        android:layout_marginLeft="30dp"/>

                    <EditText
                        android:id="@+id/edt_apelido"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Apelido"
                        android:drawableLeft="@drawable/ic_pedidos"
                        android:drawablePadding="10dp"
                        />

                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:id="@+id/row_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_below="@id/row_1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/lb_morada"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="MORADA"
                        android:textSize="10dp"
                        android:layout_marginLeft="30dp"/>

                    <EditText
                        android:id="@+id/edt_morada"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Apelido"
                        android:drawableLeft="@drawable/ic_pedidos"
                        android:drawablePadding="10dp"
                        />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/row_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_below="@id/row_2"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginRight="10dp">
                    <TextView
                        android:id="@+id/lb_codigopostal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CODIGO-POSTAL"
                        android:textSize="10dp"
                        android:layout_marginLeft="30dp"/>

                    <EditText
                        android:id="@+id/edt_codigopostal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="2570-523"
                        android:drawableLeft="@drawable/ic_pedidos"
                        android:drawablePadding="10dp"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:id="@+id/lb_datanascimento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="DATA NASCIMENTO"
                        android:textSize="10dp"
                        android:layout_marginLeft="30dp"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="23 / 05 /2000"
                        android:inputType="date"
                        android:drawableLeft="@drawable/ic_pedidos"
                        android:drawablePadding="10dp"/>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/row_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_below="@id/row_3"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginRight="10dp">
                    <TextView
                        android:id="@+id/lb_nacionalidade"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="NACIONALIDADE"
                        android:textSize="10dp"
                        android:layout_marginLeft="30dp"/>

                    <EditText
                        android:id="@+id/edt_nacionalidade"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Portugues"
                        android:drawableLeft="@drawable/ic_pedidos"
                        android:drawablePadding="10dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:id="@+id/lb_telemovel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TELEMOVEL"
                        android:textSize="10dp"
                        android:layout_marginLeft="30dp"/>

                    <EditText
                        android:id="@+id/edt_telemovel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="918493829"
                        android:drawableLeft="@drawable/ic_pedidos"
                        android:drawablePadding="10dp"/>


                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:id="@+id/row_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_below="@id/row_4"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="10dp">
                    <TextView
                        android:id="@+id/lb_genero"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="GENERO"
                        android:textSize="10dp"
                        android:layout_marginLeft="30dp"/>

                    <Spinner
                        android:id="@+id/sp_genero"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:tooltipText="Masculino"/>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/row_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_below="@id/row_5"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/lb_cargo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CARGO"
                        android:textSize="10dp"
                        android:layout_marginLeft="30dp"/>

                    <EditText
                        android:id="@+id/edt_cargo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ATENDEDOR PEDIDOS"
                        android:drawableLeft="@drawable/ic_pedidos"
                        android:drawablePadding="10dp"/>


                </LinearLayout>



            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
</FrameLayout>