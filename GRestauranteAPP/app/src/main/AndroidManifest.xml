<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="amsi.dei.estg.ipleiria.grestauranteapp">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".vistas.DetalhesProdutoActivity"
            android:parentActivityName=".vistas.ListaProdutosActivity"/>

        <activity android:name=".vistas.ListaProdutosActivity"
            android:parentActivityName=".vistas.StartActivity"/>

        <activity android:name=".vistas.CriarPedidoActivity"
            android:parentActivityName=".vistas.MenuFuncionarioActivity"/>

        <activity android:name=".vistas.DetalhesPedidoActivity"
            android:parentActivityName=".vistas.MenuFuncionarioActivity"/>

        <activity android:name=".vistas.SettingsActivity"
            android:parentActivityName=".vistas.StartActivity"/>

        <activity android:name=".vistas.LoginActivity"
            android:parentActivityName=".vistas.StartActivity"/>

        <activity android:name=".vistas.AdminControlerActivity" />
        <activity android:name=".vistas.RegistarActivity"
            android:parentActivityName=".vistas.LoginActivity"/>

        <activity android:name=".vistas.MenuClienteActivity" />
        <activity
            android:name=".vistas.MenuFuncionarioActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".vistas.StartActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>